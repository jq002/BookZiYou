<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
    android:id="@+id/view1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dip"
	    android:layout_below="@+id/pw"
	    
	  >
		<EditText 
	    android:id="@+id/yanzhengma1"
	    android:layout_width="90dp"
	    android:layout_height="45dp"
	    android:layout_marginTop="25dp"
	    android:drawableLeft="@drawable/left_kongge"
	    android:layout_marginLeft="10dp"
	    android:textSize="17sp"
	    android:background="@drawable/yanzhengma_selector"
	    android:hint="验证码"/>  
	    
	    <ImageView
	        android:id="@+id/imageview1"
	        android:layout_width="130dp"
	        android:layout_height="50dp"
	        android:layout_alignBottom="@+id/yanzhengma1"
	        android:layout_alignTop="@+id/yanzhengma1"
	        android:layout_toLeftOf="@+id/change1"
	        android:layout_toRightOf="@+id/yanzhengma1" />
	    <Button
	        android:id="@+id/change1"
	        android:layout_width="100dp"
	        android:layout_height="40dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="25dp"
	        android:layout_alignParentRight="true"
	        android:text="@string/regist_change"
	        android:background="@drawable/main_login_selector"
	        android:textColor="#ffffff"
	        />

	    
  
 </RelativeLayout>

</LinearLayout>
